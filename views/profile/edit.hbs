<div class="wrapper">
  <div class="profile">
    <div class="content">
      <h1>Edit Profile</h1>
      <form
        action="/profile/edit/{{user._id}}"
        method="post"
        enctype="multipart/form-data"
      >
        <!-- Photo -->
        <fieldset>
          <div class="grid-35">
            <label for="avatar">Your Photo</label>
          </div>
          <div class="grid-65">
            <span class="photo" title="Upload your Avatar!"></span>
            <input name="image" type="file" />
          </div>
        </fieldset>
        <fieldset>
          <div class="grid-35">
            <label for="username">Username</label>
          </div>
          <div class="grid-65">
            <input name="username" type="text" id="fname" tabindex="1" />
          </div>
        </fieldset>
        <fieldset>
          <div class="grid-35">
            <label for="ocupation">Occupation</label>
          </div>
          <div class="grid-65">
            <input name="ocupation" type="text" id="lname" tabindex="2" />
          </div>
        </fieldset>
        <!-- Description about User -->

        <fieldset>
          <a href="/profile"><input
              type="button"
              class="Btn cancel"
              value="Cancel"
            /></a>

          <input type="submit" class="Btn" value="Save Changes" />
        </fieldset>

      </form>
    </div>
  </div>
</div>